<Window x:Class="iCustomer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iCustomer"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" Background="#0D1117">
    <DockPanel>
        <!-- Sidebar navigation — SelectedValue is bound to MainViewModel.SelectedView,
             so clicking an item swaps the content area automatically. -->
        <ListBox DockPanel.Dock="Left" Width="150" Background="#21262D" Foreground="White" BorderThickness="0"
             SelectedValue="{Binding SelectedView, Mode=TwoWay}" SelectedValuePath="Tag">
            <ListBoxItem Content="Home"      Tag="Home"     FontSize="16" Padding="10"
                         HorizontalContentAlignment="Left" Style="{StaticResource ModernSidebarStyle}"/>
            <ListBoxItem Content="Customers" Tag="Customer" FontSize="16" Padding="10"
                         HorizontalContentAlignment="Left" Style="{StaticResource ModernSidebarStyle}"/>
        </ListBox>

        <!-- Dynamic content area — ContentControl renders whatever object
             MainViewModel.CurrentView is set to at any given moment. -->
        <Grid Name="MainContent" Background="#0D1117" Margin="10">
            <ContentControl Content="{Binding CurrentView}" />
        </Grid>
    </DockPanel>
</Window>
