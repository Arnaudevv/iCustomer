<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══════════════════════════════════════════════════════════════
         COLOUR PALETTE  (single source of truth for the whole app)
    ════════════════════════════════════════════════════════════════════ -->
    <SolidColorBrush x:Key="PrimaryDark"    Color="#0D1117"/>
    <SolidColorBrush x:Key="SecondaryDark"  Color="#161B22"/>
    <SolidColorBrush x:Key="TertiaryDark"   Color="#21262D"/>
    <SolidColorBrush x:Key="AccentBlue"     Color="#2E415D"/>
    <SolidColorBrush x:Key="AccentGreen"    Color="#378F49"/>
    <SolidColorBrush x:Key="AccentRed"      Color="#6C1E19"/>
    <SolidColorBrush x:Key="AccentOrange"   Color="#D29922"/>
    <SolidColorBrush x:Key="TextPrimary"    Color="#E6EDF3"/>
    <SolidColorBrush x:Key="TextSecondary"  Color="#8B949E"/>
    <SolidColorBrush x:Key="BorderColor"    Color="#30363D"/>
    <!-- Extra colours used only in legacy ModernTheme styles -->
    <SolidColorBrush x:Key="LegacyText"     Color="#2C3E50"/>
    <SolidColorBrush x:Key="LegacyInput"    Color="#34495E"/>
    <SolidColorBrush x:Key="LegacyBorder"   Color="#D5D8DC"/>
    <SolidColorBrush x:Key="ModalBg"        Color="#252526"/>


    <!-- ═══════════════════════════════════════════════════════════════
         SIDEBAR  (MainWindow – ListBox navigation)
    ════════════════════════════════════════════════════════════════════ -->
    <Style x:Key="ModernSidebarStyle" TargetType="ListBoxItem">
        <Setter Property="Foreground"               Value="White"/>
        <Setter Property="Background"               Value="{StaticResource TertiaryDark}"/>
        <Setter Property="Padding"                  Value="10"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="FontSize"                 Value="16"/>
        <Setter Property="Cursor"                   Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Name="Bd"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Left"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#414F62"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="#414F62"/>
                            <Setter Property="FontWeight"               Value="Bold"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- ═══════════════════════════════════════════════════════════════
         LEGACY FORM STYLES  (used in the original ModernTheme only)
    ════════════════════════════════════════════════════════════════════ -->
    <Style x:Key="ModernLabelStyle" TargetType="Label">
        <Setter Property="FontSize"          Value="14"/>
        <Setter Property="Foreground"        Value="{StaticResource LegacyText}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin"            Value="0,5,5,0"/>
    </Style>

    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="FontSize"            Value="12"/>
        <Setter Property="Foreground"          Value="{StaticResource LegacyInput}"/>
        <Setter Property="Padding"             Value="8"/>
        <Setter Property="Margin"              Value="0,5"/>
        <Setter Property="Background"          Value="White"/>
        <Setter Property="BorderBrush"         Value="{StaticResource LegacyBorder}"/>
        <Setter Property="BorderThickness"     Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="ModernDatePickerStyle" TargetType="DatePicker">
        <Setter Property="FontSize"            Value="12"/>
        <Setter Property="Foreground"          Value="{StaticResource LegacyInput}"/>
        <Setter Property="Padding"             Value="8"/>
        <Setter Property="Margin"              Value="0,5"/>
        <Setter Property="Background"          Value="White"/>
        <Setter Property="BorderBrush"         Value="{StaticResource LegacyBorder}"/>
        <Setter Property="BorderThickness"     Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
    </Style>

    <Style x:Key="ModernPrimaryButtonStyle" TargetType="Button">
        <Setter Property="FontSize"        Value="14"/>
        <Setter Property="Padding"         Value="5,5"/>
        <Setter Property="Foreground"      Value="White"/>
        <Setter Property="Background"      Value="#3498DB"/>
        <Setter Property="BorderBrush"     Value="#2980B9"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="Margin"          Value="5,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="2" Padding="10"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#2980B9"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background"  Value="#BDC3C7"/>
                            <Setter Property="BorderBrush" Value="#95A5A6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ModernSecundaryButtonStyle" TargetType="Button">
        <Setter Property="FontSize"        Value="14"/>
        <Setter Property="Padding"         Value="5,5"/>
        <Setter Property="Foreground"      Value="White"/>
        <Setter Property="Background"      Value="#790000"/>
        <Setter Property="BorderBrush"     Value="#890025"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="Margin"          Value="5,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="2" Padding="10"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#B94424"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background"  Value="#B94424"/>
                            <Setter Property="BorderBrush" Value="#660025"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- ═══════════════════════════════════════════════════════════════
         DATA GRID  (CustomerView – implicit styles, apply to all grids)
    ════════════════════════════════════════════════════════════════════ -->
    <Style TargetType="DataGrid">
        <Setter Property="Background"            Value="{StaticResource PrimaryDark}"/>
        <Setter Property="Foreground"            Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush"           Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness"       Value="1"/>
        <Setter Property="GridLinesVisibility"   Value="Horizontal"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderColor}"/>
        <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryDark}"/>
        <Setter Property="RowHeaderWidth"        Value="0"/>
        <Setter Property="FontFamily"            Value="Segoe UI"/>
        <Setter Property="FontSize"              Value="13"/>
    </Style>

    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background"             Value="{StaticResource TertiaryDark}"/>
        <Setter Property="Foreground"             Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush"            Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness"        Value="0,0,0,1"/>
        <Setter Property="Padding"                Value="16,12"/>
        <Setter Property="FontWeight"             Value="SemiBold"/>
        <Setter Property="FontSize"               Value="13"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment"   Value="Center"/>
    </Style>

    <Style TargetType="DataGridCell">
        <Setter Property="Background"      Value="{StaticResource SecondaryDark}"/>
        <Setter Property="Foreground"      Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding"         Value="16,10"/>
    </Style>

    <Style TargetType="DataGridRow">
        <Setter Property="Background" Value="{StaticResource PrimaryDark}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="Height"     Value="40"/>
    </Style>

    <!-- Centered TextBlock inside DataGrid columns -->
    <Style x:Key="CenteredCellStyle" TargetType="TextBlock">
        <Setter Property="TextAlignment"   Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin"          Value="0"/>
    </Style>


    <!-- ═══════════════════════════════════════════════════════════════
         CUSTOMER VIEW BUTTONS
    ════════════════════════════════════════════════════════════════════ -->
    <!-- "Add Customer" bar button -->
    <Style x:Key="PrimaryButtonStyle" TargetType="Button">
        <Setter Property="Background"      Value="{StaticResource TertiaryDark}"/>
        <Setter Property="Foreground"      Value="White"/>
        <Setter Property="FontFamily"      Value="Segoe UI"/>
        <Setter Property="FontSize"        Value="14"/>
        <Setter Property="FontWeight"      Value="SemiBold"/>
        <Setter Property="Padding"         Value="28,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor"          Value="Hand"/>
    </Style>

    <!-- Secondary bar button (orange) -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button">
        <Setter Property="Background"      Value="{StaticResource AccentOrange}"/>
        <Setter Property="Foreground"      Value="#0D1117"/>
        <Setter Property="FontFamily"      Value="Segoe UI"/>
        <Setter Property="FontSize"        Value="14"/>
        <Setter Property="FontWeight"      Value="SemiBold"/>
        <Setter Property="Padding"         Value="28,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor"          Value="Hand"/>
    </Style>

    <!-- Edit / Delete / Chart action buttons inside DataGrid rows -->
    <Style x:Key="DataGridActionButtonStyle" TargetType="Button">
        <Setter Property="FontFamily"      Value="Segoe UI"/>
        <Setter Property="FontSize"        Value="12"/>
        <Setter Property="Padding"         Value="8,4"/>
        <Setter Property="Margin"          Value="3"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor"          Value="Hand"/>
    </Style>


    <!-- ═══════════════════════════════════════════════════════════════
         FORM (FormulariClientView)
    ════════════════════════════════════════════════════════════════════ -->
    <Style x:Key="FormTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background"      Value="{StaticResource SecondaryDark}"/>
        <Setter Property="Foreground"      Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush"     Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding"         Value="12,10"/>
        <Setter Property="FontFamily"      Value="Segoe UI"/>
        <Setter Property="FontSize"        Value="13"/>
        <Setter Property="CaretBrush"      Value="{StaticResource TextPrimary}"/>
        <Setter Property="SelectionBrush"  Value="{StaticResource AccentBlue}"/>
    </Style>

    <Style x:Key="FormDatePickerStyle" TargetType="DatePicker">
        <Setter Property="Background"             Value="{StaticResource SecondaryDark}"/>
        <Setter Property="Foreground"             Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush"            Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness"        Value="1"/>
        <Setter Property="Padding"                Value="2"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Style.Resources>
            <Style TargetType="DatePickerTextBox">
                <Setter Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DatePickerTextBox">
                            <Border Background="Transparent" BorderThickness="0">
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Margin="5,0,0,0"
                                              VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Style.Resources>
    </Style>

    <Style x:Key="FormLabelStyle" TargetType="TextBlock">
        <Setter Property="Foreground"        Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontFamily"        Value="Segoe UI"/>
        <Setter Property="FontSize"          Value="13"/>
        <Setter Property="FontWeight"        Value="SemiBold"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <Style x:Key="FormTitleStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize"   Value="28"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin"     Value="0,0,0,24"/>
    </Style>

    <!-- Save button (green) -->
    <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
        <Setter Property="Background"      Value="{StaticResource AccentGreen}"/>
        <Setter Property="Foreground"      Value="White"/>
        <Setter Property="FontFamily"      Value="Segoe UI"/>
        <Setter Property="FontSize"        Value="14"/>
        <Setter Property="FontWeight"      Value="SemiBold"/>
        <Setter Property="Padding"         Value="28,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="MinWidth"        Value="100"/>
    </Style>

    <!-- Cancel button (red) -->
    <Style x:Key="SecondaryActionButtonStyle" TargetType="Button">
        <Setter Property="Background"      Value="{StaticResource AccentRed}"/>
        <Setter Property="Foreground"      Value="White"/>
        <Setter Property="FontFamily"      Value="Segoe UI"/>
        <Setter Property="FontSize"        Value="14"/>
        <Setter Property="FontWeight"      Value="SemiBold"/>
        <Setter Property="Padding"         Value="28,10"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="MinWidth"        Value="100"/>
    </Style>

    <!-- Inline validation error message -->
    <Style x:Key="FieldErrorStyle" TargetType="TextBlock">
        <Setter Property="Foreground"    Value="#E05252"/>
        <Setter Property="FontFamily"    Value="Segoe UI"/>
        <Setter Property="FontSize"      Value="11"/>
        <Setter Property="Margin"        Value="20,3,0,0"/>
        <Setter Property="TextWrapping"  Value="Wrap"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Text}" Value="">
                <Setter Property="Visibility" Value="Collapsed"/>
            </DataTrigger>
        </Style.Triggers>
    </Style>


    <!-- ═══════════════════════════════════════════════════════════════
         CHART VIEW  (ComboBox + back button)
    ════════════════════════════════════════════════════════════════════ -->
    <Style x:Key="BackButtonStyle" TargetType="Button">
        <Setter Property="Background"      Value="{StaticResource TertiaryDark}"/>
        <Setter Property="Foreground"      Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontFamily"      Value="Segoe UI"/>
        <Setter Property="FontSize"        Value="14"/>
        <Setter Property="FontWeight"      Value="SemiBold"/>
        <Setter Property="Padding"         Value="28,10"/>
        <Setter Property="BorderBrush"     Value="{StaticResource BorderColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor"          Value="Hand"/>
    </Style>

    <Style x:Key="ComboToggleStyle" TargetType="ToggleButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border Background="{StaticResource TertiaryDark}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            Cursor="Hand">
                        <Grid Margin="10,7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Grid.Column="0" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1"
                                       Text="▾"
                                       Foreground="{StaticResource TextSecondary}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DarkComboItemStyle" TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="Background" Value="{StaticResource TertiaryDark}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize"   Value="13"/>
        <Setter Property="Padding"    Value="12,8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBoxItem">
                    <Border x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentBlue}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource AccentBlue}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DarkComboStyle" TargetType="ComboBox">
        <Setter Property="Foreground"         Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontFamily"         Value="Segoe UI"/>
        <Setter Property="FontSize"           Value="13"/>
        <Setter Property="MinWidth"           Value="200"/>
        <Setter Property="ItemContainerStyle" Value="{StaticResource DarkComboItemStyle}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton x:Name="ToggleButton"
                                      Style="{StaticResource ComboToggleStyle}"
                                      IsChecked="{Binding Path=IsDropDownOpen,
                                                          RelativeSource={RelativeSource TemplatedParent},
                                                          Mode=TwoWay}"
                                      Focusable="False"/>
                        <ContentPresenter x:Name="ContentSite"
                                          IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          VerticalAlignment="Center"
                                          Margin="12,0,30,0"/>
                        <Popup x:Name="Popup"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Slide">
                            <Border x:Name="DropDown"
                                    Background="{StaticResource TertiaryDark}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    BorderThickness="1"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                <ScrollViewer>
                                    <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- ═══════════════════════════════════════════════════════════════
         DELETE MODAL BUTTONS
    ════════════════════════════════════════════════════════════════════ -->
    <Style x:Key="ModalConfirmButtonStyle" TargetType="Button">
        <Setter Property="Background"      Value="{StaticResource AccentRed}"/>
        <Setter Property="Foreground"      Value="White"/>
        <Setter Property="Width"           Value="100"/>
        <Setter Property="Height"          Value="35"/>
        <Setter Property="Margin"          Value="0,0,12,0"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

    <Style x:Key="ModalCancelButtonStyle" TargetType="Button">
        <Setter Property="Background"      Value="#3A3A3A"/>
        <Setter Property="Foreground"      Value="White"/>
        <Setter Property="Width"           Value="100"/>
        <Setter Property="Height"          Value="35"/>
        <Setter Property="Cursor"          Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

</ResourceDictionary>
