<Window x:Class="iCustomer.Views.DeleteCustomerModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirm" Height="200" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="{StaticResource ModalBg}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="20" FontWeight="Bold" Foreground="Gold"
                   HorizontalAlignment="Center" Margin="0,0,10,0">âš </TextBlock>

        <TextBlock Grid.Row="1"
                   Text="{Binding Message}"
                   Foreground="{StaticResource TextPrimary}"
                   TextWrapping="Wrap"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   TextAlignment="Center"
                   FontSize="15"/>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
            <Button Content="Confirm"
                    Style="{StaticResource ModalConfirmButtonStyle}"
                    Click="Confirm_Click"/>
            <Button Content="Cancel"
                    Style="{StaticResource ModalCancelButtonStyle}"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
